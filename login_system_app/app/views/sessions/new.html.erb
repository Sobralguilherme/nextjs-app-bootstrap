<!DOCTYPE html>
<html>
<head>
  <title>Login</title>
  <%= stylesheet_link_tag 'login', media: 'all' %>
</head>
<body>
  <div class="login-container">
    <h1>Login</h1>
    
    <% if flash[:alert] %>
      <div class="flash-alert"><%= flash[:alert] %></div>
    <% end %>
    
    <%= form_with url: login_path, method: :post, local: true, class: "login-form" do %>
      <div class="form-group">
        <%= label_tag :email, "Email" %>
        <%= email_field_tag :email, nil, placeholder: "Enter your email", required: true %>
      </div>

      <div class="form-group">
        <%= label_tag :password, "Password" %>
        <%= password_field_tag :password, nil, placeholder: "Enter your password", required: true %>
      </div>
      
      <div class="form-group">
        <%= submit_tag "Login", class: "btn-login" %>
      </div>
    <% end %>

    <p>Don't have an account? <a href="<%= signup_path %>">Sign up</a></p>
  </div>
</body>
</html>
